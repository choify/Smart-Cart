    title: "장치 화면",
    index: req.params.idx,
    data: { devices: [ ... ]}
-->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/style.css" />
    <script src="main.js"></script>
</head>
<body>
<%
    var total = data.devices.length;
    var on = 0;
    data.devices.forEach(function(e) {
        if (e.status === "on")
            on += 1;
    });
%>
    <nav>
        <p class="title" float="left"><%= title %></p>
    </nav>
    <main>
        <div class="content">
            <div class="info">
                <div class="title" float="left">창고내 센서</div>
            </div>
            <div class="row">
                <div class="card col3">
                    <div class="name">온도</div>
                    <div class="value">30℃</div>
                </div>
                <div class="card col3">
                    <div class="name">습도</div>
                    <div class="value">30℃</div>
                </div>
                <div class="card col3">
                    <div class="name">미세먼지</div>
                    <div class="value">30℃</div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="info">
                <div class="title" float="left">장치 목록</div>
                <div class="work" float="right">작동중 : <%= on %> / <%= total %></div>
            </div>
            <%- include("item/lst_device.ejs", {data: data}) %>
        </div>
    </main>
</body>
</html>