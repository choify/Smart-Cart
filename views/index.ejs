<!-- router/main.js

    title: "장치 화면",
    index: req.params.idx,
    data: { devices: [ ... ]}
-->

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="/style.css" />
    <script src="main.js"></script>
    <script>
function getLastData() {
    var xhttp = new XMLHttpRequest();
    xhttp.onreadystatechange = function () {
        if (this.readyState == 4 && this.status == 200) {
            let tmp = JSON.parse(xhttp.responseText)[0];
            document.getElementById('sen-temp')
                .getElementsByClassName('value')[0]
                .innerText = tmp.TEMP + '℃';
            document.getElementById('sen-humi')
                .getElementsByClassName('value')[0]
                .innerText = tmp.HUMI + '%';
            document.getElementById('sen-micro')
                .getElementsByClassName('value')[0]
                .innerText = tmp.MICRO + '%';
        }
    };
    xhttp.open("GET", "/sensor", true);
    xhttp.send();
}
window.setInterval(getLastData, 1000);
    </script>
</head>
<body>
<%
    var total = data.devices.length;
    var on = 0;
    data.devices.forEach(function(e) {
        if (e.status === "on")
            on += 1;
    });
%>
    <nav>
        <p class="title" float="left"><%= title %></p>
    </nav>
    <main>
        <div class="content">
            <div class="info">
                <div class="title" float="left">창고내 센서</div>
            </div>
            <div class="row">
                <div id="sen-temp" class="item card col3">
                    <div class="name">온도</div>
                    <div class="value">30℃</div>
                </div>
                <div id="sen-humi" class="item card col3">
                    <div class="name">습도</div>
                    <div class="value">30℃</div>
                </div>
                <div id="sen-micro" class="item card col3">
                    <div class="name">미세먼지</div>
                    <div class="value">30℃</div>
                </div>
            </div>
        </div>
        <div class="content">
            <div class="info">
                <div class="title" float="left">장치 목록</div>
                <div class="work" float="right">작동중 : <%= on %> / <%= total %></div>
            </div>
            <%- include("item/lst_device.ejs", {data: data}) %>
        </div>
    </main>
</body>
</html>