<!--
    data = {devices: [ ... ]}
-->

<% data.devices.forEach(function (e, i) { %>
<a class="item card col4" href="device/<%= i %>">
    <div class="column name"><%= e.name %></div>
    <% if (e.status === "on") { %>
    <div class="column status running">ON (<%= e.battery %>%)</div>
    <% } else { %>
    <div class="column status">OFF</div>
    <% } %>
</a>
<% }); %>
<style>
.card {margin:8px 10px 8px 0; }
.item.card {display:inline-block; padding:16px; width:calc(25% - 12px); box-sizing:border-box; color:rgba(0,0,0,0.82); text-decoration:none;}
.item.card:hover {box-shadow:4px 4px 0 rgba(0,0,0,0.12), 4px 4px 8px rgba(0,0,0,0.24);}
.item.card:nth-child(4n+1) {margin-right:0;}

.item .column.name {color:rgba(0,0,0,0.56);}
.column.status {color:#f44336;}
.column.status.running {color:#8bc34a;}
</style>